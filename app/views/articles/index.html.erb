<h1>Articles#index</h1>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>User</th>
			<th>Description</th>
			<th>Photo</th>
			<th>approved</th>
			<th>urlsource</th>
			<th>Opciones</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.name %></td>
			<td><%= article.user_id.nil? ? "-" : article.user.name%></td>
			<td><%= article.description %></td>
			<td>
				<% unless article.photo.nil? %>
					<% if File.exist?(Rails.root + 'public/uploads/' + article.photo) %>
						<%= image_tag('/uploads/' + article.photo, size: "100") %>
					<% else %>
						-
					<% end %>
				<% else %>
					-
				<% end %>
			</td>
			<td><%= article.approved %></td>
			<td><%= article.urlsource %></td>
			<td>
				<%= link_to "Edit" , edit_article_path(article) %> | 
				<%= link_to "Show" , article_path(article) %> | 
				<%= link_to "Delete" , article_path(article), method: "DELETE" %> 
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Add Article" , new_article_path() %>